// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Service {
  id           Int       @id @default(autoincrement())
  title        String
  description  String?
  minPrice     Int
  weeksToSolve String
  hardness     Int
  comments     Comment[]
}

model Comment {
  id        Int      @id @default(autoincrement())
  name      String?
  comment   String?
  rating    Int
  Service   Service? @relation(fields: [serviceId], references: [id])
  serviceId Int?
}
